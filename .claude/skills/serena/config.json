{
  "name": "serena",
  "version": "1.0.0",
  "description": "Serena MCP skill for ChargeX Frontend - AI-powered code analysis and refactoring",

  "mcp_server": {
    "type": "serena",
    "executable": "uvx",
    "arguments": [
      "--from",
      "git+https://github.com/oraios/serena",
      "serena",
      "start-mcp-server",
      "--context",
      "ide-assistant",
      "--project",
      "."
    ]
  },

  "configuration": {
    "project_config": ".serena/project.yml",
    "server_config": ".serena/serena_config.yml",
    "setup_guide": ".serena/SETUP_GUIDE.md"
  },

  "prerequisites": {
    "python": "3.8+",
    "package_manager": "uv or pip",
    "git": "required"
  },

  "features": {
    "semantic_analysis": true,
    "code_completion": true,
    "symbol_navigation": true,
    "error_detection": true,
    "refactoring_support": true,
    "cross_file_analysis": true
  },

  "supported_languages": [
    "typescript",
    "javascript",
    "python",
    "java",
    "go",
    "rust",
    "cpp",
    "csharp"
  ],

  "project_technologies": [
    "React 19",
    "Vite 7",
    "TypeScript 5.8",
    "TailwindCSS 4",
    "Ant Design 5",
    "React Router 7",
    "TanStack Query 5",
    "Socket.io Client"
  ],

  "commands": {
    "init": "bash .claude/skills/serena/init.sh",
    "start": "uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project .",
    "status": "curl http://localhost:8000/health",
    "help": "serena --help"
  },

  "keywords": [
    "code-analysis",
    "refactoring",
    "semantic-search",
    "symbol-navigation",
    "ai-coding",
    "mcp-server"
  ],

  "author": "ClaudeKit Integration",
  "license": "MIT",
  "repository": "https://github.com/oraios/serena"
}
